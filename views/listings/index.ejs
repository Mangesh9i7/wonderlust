<% layout('layouts/boilerplate') -%>

    <style>
        #filters {
            display: flex;
            overflow-x: auto;
            gap: 8px;
            padding: 1px;
            flex-grow: 1;
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        #filters::-webkit-scrollbar {
            display: none;
        }

        .filter {
            flex: 0 0 auto;
            text-align: center;
            padding: 2px;
            border-radius: 8px;
            background-color: #f5f5f5;
            min-width: 60px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-size: 12px;
            color: #333;
        }

        .filter i {
            font-size: 16px;
            color: #555;
        }

        .filter:hover {
            background-color: #e0e0e0;
        }

        .filter p {
            margin: 4px 0 0;
        }

        .tax {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .form-switch {
            display: flex;
            align-items: center;
            padding-left: 1rem;
            padding-right: 1rem;
            border-left: 1px solid #e0e0e0;
            margin-left: 8px;
        }

        .form-check-label {
            font-size: 14px;
            color: #333;
            cursor: pointer;
            margin-right: 8px;
            white-space: nowrap;
        }

        .form-check-input {
            opacity: 0;
            width: 0;
            height: 0;
            position: absolute;
        }

        .form-check-input+.form-check-label {
            position: relative;
            padding-left: 42px;
            display: inline-block;
            height: 24px;
            line-height: 24px;
        }

        .form-check-input+.form-check-label::before {
            content: "";
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 36px;
            height: 20px;
            background-color: #ccc;
            border-radius: 10px;
            transition: background-color 0.3s ease;
        }

        .form-check-input+.form-check-label::after {
            content: "";
            position: absolute;
            left: 2px;
            top: 50%;
            transform: translateY(-50%);
            width: 16px;
            height: 16px;
            background-color: white;
            border-radius: 50%;
            transition: transform 0.3s ease;
        }

        .form-check-input:checked+.form-check-label::before {
            background-color: #007bff;
        }

        .form-check-input:checked+.form-check-label::after {
            transform: translate(16px, -50%);
        }

        .tax-info {
            display: none;
        }
    </style>

    <div class="container mt-5">
        <div class="tax">
            <div id="filters">
                <div class="filter"><i class="fa-solid fa-house"></i>
                    <p>Entire Place</p>
                </div>
                <div class="filter"><i class="fa-solid fa-door-open"></i>
                    <p>Private Room</p>
                </div>
                <div class="filter"><i class="fa-solid fa-users"></i>
                    <p>Shared Room</p>
                </div>
                <div class="filter"><i class="fa-solid fa-tree-city"></i>
                    <p>Resorts</p>
                </div>
                <div class="filter"><i class="fa-solid fa-campground"></i>
                    <p>Cabins</p>
                </div>
                <div class="filter"><i class="fa-solid fa-water"></i>
                    <p>Beachfront</p>
                </div>
                <div class="filter"><i class="fa-solid fa-mountain-sun"></i>
                    <p>Mountain View</p>
                </div>
                <div class="filter"><i class="fa-solid fa-city"></i>
                    <p>Urban</p>
                </div>
                <div class="filter"><i class="fa-solid fa-wifi"></i>
                    <p>Free Wi-Fi</p>
                </div>
                <div class="filter"><i class="fa-solid fa-car"></i>
                    <p>Parking</p>
                </div>
                <div class="filter"><i class="fa-solid fa-hot-tub-person"></i>
                    <p>Hot Tub</p>
                </div>
                <div class="filter"><i class="fa-solid fa-kitchen-set"></i>
                    <p>Kitchen</p>
                </div>
                <div class="filter"><i class="fa-solid fa-dog"></i>
                    <p>Pet Friendly</p>
                </div>
                <div class="filter"><i class="fa-solid fa-smoking-ban"></i>
                    <p>Non-Smoking</p>
                </div>
                <div class="filter"><i class="fa-solid fa-wheelchair"></i>
                    <p>Accessible</p>
                </div>
                <div class="filter"><i class="fa-solid fa-star"></i>
                    <p>Top Rated</p>
                </div>
                <div class="filter"><i class="fa-solid fa-tags"></i>
                    <p>Budget</p>
                </div>
                <div class="filter"><i class="fa-solid fa-calendar-check"></i>
                    <p>Instant Book</p>
                </div>
            </div>

            <div class="form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            <% for(let listing of alllisting) { %>
                <div class="col">
                    <a href="/listing/<%= listing._id %>" style="text-decoration: none;">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="<%= listing.image.url || '/images/default.jpg' %>" alt="<%= listing.title %>"
                                class="card-img-top" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title text-dark">
                                    <%= listing.title %>
                                </h5>
                                <p class="card-text text-muted">
                                    <%= listing.location %>, <%= listing.country %>
                                </p>
                                <p class="card-text fw-bold text-primary">
                                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN")
                                        : "Price not available" %>
                                        <i class="tax-info"> +18% GST</i> / night
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
    </div><br><br>

    <script>
        const taxSwitch = document.getElementById('flexSwitchCheckDefault');
        taxSwitch.addEventListener("click", () => {
            let taxinfo = document.getElementsByClassName("tax-info");
            for (let info of taxinfo) {
                info.style.display = (info.style.display !== "inline") ? "inline" : "none";
            }
        });
    </script>