<% layout('layouts/boilerplate') -%>

    <body>
        <div class="container mt-5">
            <div class="card shadow-sm" style="max-width: 600px; margin: auto;">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>"
                    style="height: 250px; object-fit: cover;">
                <ul>
                    <h5 class="card-title">
                        <%= listing.title %>
                    </h5>
                    <p class="card-text">
                    <h6><i>own by
                            <%= listing.owner.username %>
                        </i></h6><br>
                    <%= listing.description %>
                        </p>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item">
                                <strong>Price:</strong>


                                ₹<%= listing.price.toLocaleString("en-IN") %>

                            </li>
                            <li class="list-group-item">
                                <strong>Location:</strong>
                                <%= listing.location %>
                            </li>
                            <li class="list-group-item">
                                <strong>Country:</strong>
                                <%= listing.country %>
                            </li>
                        </ul>
                        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
                            <div class="d-flex justify-content-between">
                                <a href="/listing/<%= listing.id %>/edit" class="btn btn-outline-primary btn-sm">Edit
                                    Listing</a>
                                <form action="/listing/<%= listing.id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete Listing</button>
                                </form>
                            </div>
                            <% } %>
                                <hr>
                                <% if (currUser) { %>
                                    <div class="review-section mt-4">
                                        <h4 class="mb-3">Add a Review</h4>
                                        <form action="/listing/<%= listing.id %>/reviews" method="POST"
                                            class="needs-validation" novalidate>

                                            <fieldset class="starability-slot">
                                                <legend>Rating</legend>
                                                <input type="radio" id="no-rate" class="input-no-rate"
                                                    name="review[rating]" value="1" checked aria-label="No rating." />
                                                <input type="radio" id="rate1" name="review[rating]" value="1" />
                                                <label for="rate1" title="Terrible">1 star</label>
                                                <input type="radio" id="rate2" name="review[rating]" value="2" />
                                                <label for="rate2" title="Not good">2 stars</label>
                                                <input type="radio" id="rate3" name="review[rating]" value="3" />
                                                <label for="rate3" title="Average">3 stars</label>
                                                <input type="radio" id="rate4" name="review[rating]" value="4" />
                                                <label for="rate4" title="Very good">4 stars</label>
                                                <input type="radio" id="rate5" name="review[rating]" value="5" />
                                                <label for="rate5" title="Amazing">5 stars</label>
                                            </fieldset>
                                            <br>
                                            <div class="mb-3">
                                                <label for="comment" class="form-label">Comment</label>
                                                <textarea name="review[comment]" id="comment" class="form-control"
                                                    required rows="3"></textarea>
                                                <div class="invalid-feedback">Please enter a comment.</div>
                                            </div>

                                            <button type="submit" class="btn btn-outline-success btn-sm">Submit</button>
                                        </form>
                                    </div>
                                    <% } %>
            </div>
            </ul>
        </div>
        <hr>
        <h4 class="mb-4">All Reviews</h4>
        <div class="container" style="padding-top: 1.5rem;">
            <div class="row">
                <% for (let i=0; i < listing.reviews.length; i++) { %>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 position-relative">

                            <!-- Options Button -->
                            <form class="position-absolute top-0 end-0 mt-2 me-3">
                                <button class="btn btn-light rounded-circle px-2 py-1" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#optionsMenu<%= i %>"
                                    aria-expanded="false" aria-controls="optionsMenu<%= i %>" aria-label="Options">
                                    <span style="font-size: 1.25rem; line-height: 1;">⋮</span>
                                </button>
                            </form>

                            <!-- Collapsible Menu -->
                            <div class="collapse position-absolute top-0 end-0 mt-5 me-3" id="optionsMenu<%= i %>">
                                <div class=" rounded p-2 " style="background-color: #fff;">
                                    <ul class="border list-unstyled mb-0">
                                        <form
                                            action="/listing/<%= listing._id %>/reviews/<%= listing.reviews[i]._id %>?_method=DELETE"
                                            method="POST"><button
                                                style="background-color: #fff; border: none;">Delete</button></form>
                                </div>
                                <br><br>
                            </div>

                            <div class="card-header" style="background-color: #fff; border: none;">
                                <p class="mb-0"><strong>
                                        @<%= listing.reviews[i].author.username %>
                                    </strong></p>
                            </div>
                            <div class="card-footer text-muted" style="background-color: #fff; border: none;">
                                <p class="starability-result" data-rating=<%=listing.reviews[i].rating %>>
                                </p>
                            </div>


                            <div class="card-body" style="background-color: #fff; border: none;">
                                <p class="card-text">
                                    <%= listing.reviews[i].comment %>
                                </p>
                            </div>



                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
        </div><br>
    </body>